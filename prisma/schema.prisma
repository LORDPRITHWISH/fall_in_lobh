generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model website {
  id                  Int      @id @default(autoincrement())
  title               String
  moods               String[]
  messages            String[]
